<?php
$categories = $block->getCategoryList();
$limit = 5;
$count = 0;
?>
<div class="mp-sidebar mpcss">
	<div class="row">
		<div class="block-title col-xs-12">
				<p class="block-mp-sidebar-heading" role="heading" aria-level="2"><?php echo __('Categories') ?></p>

		</div>
		<div class="col-xs-12">
			<?php if ($categories->getSize()): ?>


			<?php foreach ($categories as $category): ?>
			<?php
			$count++;
			if ($count > $limit)
				break;
			?>
					<i class="fa fa-angle-right"></i>&nbsp;<a class="list-categories" href="<?php echo $block->getCategoryUrl($category) ?>"><?php echo $category->getName() ?></a>


			<?php endforeach; ?>

			<?php else: ?>
				<?php echo __('No Categories') ?>
			<?php endif; ?>
		</div>
	</div>
</div>
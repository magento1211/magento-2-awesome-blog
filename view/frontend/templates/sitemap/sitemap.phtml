use Mageplaza\Blog\Helper\Data;

/** @var Data $helper */
$helper         = $this->helper(Data::class);
$posts      = $helper->getPostList();
$categories = $helper->getCategoryList();
$tags       = $helper->getTagList();
$topics     = $helper->getTopicList();
?>
<?php
/**
 * show posts list
 */
	if (!empty($posts)):
?>
	<h2><?php echo count($posts) == 1 ? __('Post') : __('Posts') ?></h2>
	<ul>
		<?php foreach ($posts as $post): ?>
			<li><a href="<?php echo $post->getUrl() ?>"><?php echo $post->getName(); ?></a> </li>
		<?php endforeach; ?>
	</ul>
<?php endif; ?>

<?php
/**
 * show categories list
 */
if (!empty($categories)):
	?>
	<h2><?php echo count($categories) == 1 ? __('Category') : __('Categories') ?></h2>
	<ul>
		<?php foreach ($categories as $category): ?>
			<li><a href="<?php echo $helper->getBlogUrl($category, Data::TYPE_CATEGORY) ?>"><?php echo $category->getName(); ?></a> </li>
		<?php endforeach; ?>
	</ul>
<?php endif; ?>

<?php
/**
 * show tags list
 */
if (!empty($tags)):
	?>
	<h2><?php echo count($tags) == 1 ? __('Tag') : __('Tags') ?></h2>
	<ul>
		<?php foreach ($tags as $tag): ?>
			<li><a href="<?php echo $helper->getBlogUrl($tag, Data::TYPE_TAG) ?>"><?php echo $tag->getName(); ?></a> </li>
		<?php endforeach; ?>
	</ul>
<?php endif; ?>

<?php
/**
 * show topics list
 */
if (!empty($topics)):
	?>
    <h2><?php echo count($topics) == 1 ? __('Topic') : __('Topics') ?></h2>
    <ul>
		<?php foreach ($topics as $topic): ?>
            <li><a href="<?php echo $helper->getBlogUrl($topic, Data::TYPE_TOPIC) ?>"><?php echo $topic->getName(); ?></a> </li>
		<?php endforeach; ?>
	</ul>
<?php endif; ?>
